<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("headscripts", required: false)
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Ozan Ticaret", "Home", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Anasayfa", "Home", "Home")</li>
                    <li>@Html.ActionLink("Ürünler", "Home", "Home")</li>
                    <li>@Html.ActionLink("Sepetim", "Sepet", "Home")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Seviye Belirleme E-Ticaret II  Nihat Ozan Sandal</p>
        </footer>
    </div>

    <script src="~/App/js/App.Lang.TR.js"></script>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="~/Scripts/parsley.min.js"></script>
    <script src="~/Scripts/i18n/tr.js"></script>
    <script src="~/App/js/App.Validation.js"></script>
    <script src="~/App/js/App.Security.js"></script>
    <script src="~/App/js/App.FetchData.js"></script>
    <script src="~/App/js/App.FetchDataSucc.js"></script>
    <script src="~/App/js/App.Main.js"></script>

    @RenderSection("myscripts", required: false)

</body>
</html>
